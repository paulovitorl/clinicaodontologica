<Window  WindowStartupLocation="CenterScreen"  x:Class="ClinicaOdontologica.ServicoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaOdontologica"
        mc:Ignorable="d"
        Title="Cadastrar Servico" Height="201" Width="489">
    <Grid Margin="0,0,10,-6">
        <Label Content="Nome do Serviço:" HorizontalAlignment="Left" Margin="37,39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Nome" HorizontalAlignment="Left" Margin="146,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286" UndoLimit="124" MaxLength="124"/>
        <Label Content="Preço:" HorizontalAlignment="Left" Margin="99,63,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Valor" HorizontalAlignment="Left" Margin="146,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286" UndoLimit="124" MaxLength="124"/>
        <Button Content="Salvar" HorizontalAlignment="Left" Margin="239,111,0,0" VerticalAlignment="Top" Height="33" Width="94" Click="addServico"/>
        <Button Content="Sair" HorizontalAlignment="Left" Margin="338,111,0,0" VerticalAlignment="Top" Height="33" Width="94" Click="closeWin"/>
    </Grid>
</Window>
